@model IEnumerable<CleanArchitecture.DomainCore.Models.StudentClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="StudentClasses1" asp-action="Index">
    <p>
        Title: <input type="text" name="text" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.Period)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Class.Subjects.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.Surname)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Class.Classroom.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.Teachers.Surname)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Period)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Class.Subjects.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Classroom.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Teachers.Surname)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
