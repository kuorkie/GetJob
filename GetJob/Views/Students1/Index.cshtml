@model IEnumerable<CleanArchitecture.DomainCore.Models.Students>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Students1" asp-action="Index">
    <p>
        Title: <input type="text" name="text" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
               Специальность
            </th>
            <th>
               Курс
            </th>
            <th>
               Дата рождения
            </th>
            <th>
                Фото
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number_of_Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_Birth)
            </td>
            <td>
                
                @if (item.Student_Image != null)
                {
                    <img style='width:80px; height:60px;' src="@Url.Content(item.Student_Image)")" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
